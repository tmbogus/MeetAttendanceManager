{
    "name": "Meet Admin Overlay for Attendance Management",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Enhances Google Meet's moderation capabilities with a real-time attendance overlay.",
    "permissions": [
      "scripting",
      "storage",
      "activeTab"
    ],
    "host_permissions": [
      "https://meet.google.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self';"
    }
  }
  